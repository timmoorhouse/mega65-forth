
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
		{
			"type": "shell",
			"label": "Build",
			"linux": {
				"command": "./bin/build.sh",
				"args": ["--build"]
			},
			"windows": {
				"command": "./bin/build.cmd"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Run",
			"linux": {
				"command": "./bin/build.sh",
				"args": ["--test"]
			},
			"windows": {
				"command": "./bin/test.cmd"
			},
			"group": "test"
			// "key": "ctrl+shift+t"
		}

    ]
}
